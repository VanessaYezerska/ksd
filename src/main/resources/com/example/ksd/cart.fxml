<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ksd.CartController">
    <children>
        <ListView fx:id="cartList" prefHeight="400.0" prefWidth="300.0" />
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button fx:id="removeButton" style="-fx-background-color: red; -fx-text-fill: white;" text="Видалити" />
                <Button fx:id="closeButton" onAction="#closeCart" style="-fx-background-color: gray; -fx-text-fill: white;" text="Закрити" />
            </children>
        </HBox>
    </children>
</VBox>
